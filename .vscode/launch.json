{
    "configurations": [
        module.exports = {
            content: ["./src/**/*.{html,js}"],
            theme: {
              extend: {
                colors: {
                  "dubai-blue": "#0A6EBD", // Custom Dubai Health Authority blue
                  "health-teal": "#2CAE92" // Accent color for CTAs
                },
                fontFamily: {
                  sans: ["Inter", "sans-serif"] // Modern font stack
                }
              },
            },
            plugins: [
              require('@tailwindcss/forms'), // For form styling
              require('@tailwindcss/typography'), // Better text formatting
            ],
          }

        {
            "name": "Run JavaScript Sample",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.env",
            "outputCapture": "std",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Run Python Sample",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.env",
            "redirectOutput": false,
            "request": "launch",
            "type": "debugpy"
        }
    ]
}
